        .paytable-bottom-text {
            font-family: "NetentStandardUI";
            position: absolute;
            width: 90%;
            font-size: 16px;
            text-align: center;
            line-height: 21px;
            color: #FFFFFF;
            margin-left: 5%;
            top: 535px;
        }


        /*close button */
        .back-button {
            position: absolute;
            top: 95px;
            left: 0px;
            width: 45px;
            height: 45px;
            background: url("multimedia/images/1280x720/paytable/PT_navigation_btn_close_up.png") no-repeat;
