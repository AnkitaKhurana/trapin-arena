        .back-button:hover {
            background: url("multimedia/images/1280x720/paytable/PT_navigation_btn_close_over.png") no-repeat;
        }

        .back-button:active {
            background: url("multimedia/images/1280x720/paytable/PT_navigation_btn_close_down.png") no-repeat;
